@{
    ViewBag.Title = "SapXep";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@model IEnumerable<Website_Laptop.Models.SANPHAM>
<style>
    /* Hover effect */
    .col-md-3:hover {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    /* Product card styling */
    .product-card {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
        height: 100%; /* Ensure all product cards have the same height */
    }

        .product-card:hover {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%; /* Set the width of images to 100% */
            height: 200px; /* Set a fixed height for all images */
            object-fit: cover; /* Scale the image to cover the entire box */
            border-radius: 8px;
        }

    .product-title {
        font-weight: bold;
        margin-top: 10px;
    }

    .product-price {
        color: #dc3545;
        font-weight: bold;
        margin-top: 5px;
    }
</style>

<h2 class="text-center mt-5">Danh sách sau khi sắp xếp</h2>

<div class="container">
    <div class="row justify-content-center">
        @{
            int count = 0;
            foreach (var item in Model)
            {
                if (count < 9) // Adjusted to show 4 rows of 4 products each
                {
                    <div class="col-md-4 mt-3">
                        <div class="product-card text-center">
                            <a href="../SanPham/Detail?ma=@item.MASP" style="text-decoration:none">
                                <img src="/Images/@item.ANH" alt="@item.TENSP" class="img-fluid" />
                                <div class="product-title">@Html.DisplayFor(modelItem => item.TENSP)</div>
                                @*<div class="product-price">@String.Format("{0:0,0}", @Html.DisplayFor(modelItem => item.GIA))đ</div>*@
                                <div class="product-price">@String.Format("{0:0,0}", item.GIA)đ</div>
                            </a>
                        </div>
                    </div>
                    count++;
                }
            }
        }
    </div>
</div>