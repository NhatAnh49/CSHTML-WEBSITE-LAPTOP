@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/HeaderLayout.cshtml";
}

<h2 class="mt-5 text-center">Thêm Sản Phẩm</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="maloai">Mã Loại:</label>
                            @Html.TextBox("maloai", "", new { @class = "form-control", @placeholder = "Nhập mã loại" })
                            <span class="text-danger">@ViewData["Loi1"]</span>
                        </div>

                        <div class="form-group">
                            <label for="tensp">Tên Sản Phẩm:</label>
                            @Html.TextBox("tensp", "", new { @class = "form-control", @placeholder = "Nhập tên sản phẩm" })
                            <span class="text-danger">@ViewData["Loi2"]</span>
                        </div>

                        <div class="form-group">
                            <label for="gia">Giá Bán:</label>
                            @Html.TextBox("gia", "", new { @class = "form-control", @placeholder = "Nhập giá bán" })
                            <span class="text-danger">@ViewData["Loi3"]</span>
                        </div>

                        <div class="form-group">
                            <label for="nsx">Nhà Sản Xuất:</label>
                            @Html.TextBox("nsx", "", new { @class = "form-control", @placeholder = "Nhập nhà sản xuất" })
                        </div>

                        <div class="form-group">
                            <label for="mota">Mô Tả:</label>
                            @Html.TextBox("mota", "", new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm" })
                        </div>

                        <div class="form-group">
                            <label for="hinhanh">Hình Ảnh Sản Phẩm:</label>
                            @Html.TextBox("hinhanh", "", new { @class = "form-control", @placeholder = "Nhập URL hình ảnh" })
                        </div>

                        <div class="form-group">
                            <label for="tgbh">Thời Gian Bảo Hành:</label>
                            @Html.TextBox("tgbh", "", new { @class = "form-control", @placeholder = "Nhập thời gian bảo hành" })
                        </div>

                        <div class="form-group">
                            <label for="sl">Số Lượng Tồn:</label>
                            @Html.TextBox("sl", "", new { @class = "form-control", @placeholder = "Nhập số lượng tồn" })
                            <span class="text-danger">@ViewData["Loi4"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-4 text-center">
                <input type="submit" value="Thêm Sản Phẩm" class="btn btn-primary btn-block" style="height: 50px;" />
            </div>
            <div class="col-md-4 text-center">
                <a href="/Admin/QuanLiSP" class="btn btn-success btn-block" style="height: 50px; line-height: 35px;">Quay Về</a>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-8 text-center">
                <h3 class="text-danger">@ViewBag.TT</h3>
            </div>
        </div>
    </div>
}
