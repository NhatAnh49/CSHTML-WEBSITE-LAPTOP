@{
    ViewBag.Title = "ShowName";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@model IEnumerable<Website_Laptop.Models.SANPHAM>
<style>
    /* Hover effect */
    .product-card:hover {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    /* Product card styling */
    .product-card {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
        margin-bottom: 20px; /* Thêm margin giữa các sản phẩm */
    }

        .product-card:hover {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

    .product-title {
        font-weight: bold;
        margin-top: 10px;
    }

    .product-price {
        color: #dc3545;
        font-weight: bold;
        margin-top: 5px;
    }
</style>

<h2 class="mt-5 text-center">Sản Phẩm: @ViewBag.name</h2>

<div class="row justify-content-center">
    <!-- Để căn giữa các sản phẩm -->
    @foreach (var item in Model)
    {
        <div class="col-md-4 mt-4">
            <div class="product-card text-center">
                <a href="../SanPham/Detail?ma=@item.MASP" style="text-decoration:none">
                    <img src="/Images/@item.ANH" alt="@item.TENSP" class="img-fluid" />
                    <div class="product-title">@item.TENSP</div>
                    <div class="product-price">@String.Format("{0:0,0}", item.GIA)đ</div>
                </a>
            </div>
        </div>
    }
</div>
