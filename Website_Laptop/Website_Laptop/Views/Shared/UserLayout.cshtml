    <!-- Mã JavaScript -->
    <script>
        $(document).ready(function () {
            // Thời gian delay giữa các lần chuyển slide (đơn vị: milliseconds)
            var delay = 3000; // Ví dụ: 5 giây

            // Mảng chứa đường dẫn của các banner
            var banners = [
                "/Images/Banner/Banner1.jpg",
                "/Images/Banner/Banner2.jpg",
                "/Images/Banner/Banner3.jpg",
                // Thêm các đường dẫn của các banner khác nếu cần
            ];

            // Chạy hàm autoCarousel() sau mỗi khoảng thời gian delay
            setInterval(autoCarousel, delay);

            // Hàm thực hiện chuyển slide tự động
            function autoCarousel() {
                var activeIndex = $('.carousel-item.active').index();
                var nextIndex = (activeIndex + 1) % banners.length; // Lấy chỉ số của slide tiếp theo
                var bannerPath = banners[nextIndex]; // Lấy đường dẫn của banner tiếp theo
                // Thay đổi đường dẫn của ảnh trong carousel
                $('.carousel-item.active img').attr('src', bannerPath);
                // Chuyển đến slide tiếp theo
                $('#laptopCarousel').carousel('next');
            }
        });
    </script>
