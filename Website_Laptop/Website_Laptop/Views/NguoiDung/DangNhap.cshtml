@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/HeaderLayout.cshtml";
}

<h2 class="text-center mt-5">Đăng Nhập Tài Khoản</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="tendn">Tên Đăng Nhập:</label>
                    @Html.TextBox("tendn", "", new { @class = "form-control", required = "required" })
                    <p class="text-danger">@ViewData["Loi1"]</p>
                </div>
                <div class="form-group">
                    <label for="matkhau">Mật Khẩu:</label>
                    @Html.Password("matkhau", "", new { @class = "form-control", required = "required" })
                    <p class="text-danger">@ViewData["Loi2"]</p>
                </div>
                <div class="text-center">
                    <input type="submit" value="Đăng Nhập" class="btn btn-primary" style="width: 200px; height: 50px" />
                </div>
            </div>
        </div>
    </div>
}

<p class="text-danger text-center mt-3">@ViewBag.TBDN</p>
