@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/HeaderLayout.cshtml";
}

<h2 class="text-center mt-5">Đăng Ký Tài Khoản</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="hoten">Họ Tên:</label>
                    @Html.TextBox("hoten", "", new { @class = "form-control", required = "required" })
                    <span class="text-danger">@ViewData["Loi1"]</span>
                </div>
                <div class="form-group">
                    <label for="tendn">Tên Đăng Nhập:</label>
                    @Html.TextBox("tendn", "", new { @class = "form-control", required = "required" })
                    <span class="text-danger">@ViewData["Loi2"]</span>
                </div>
                <div class="form-group">
                    <label for="matkhau">Mật Khẩu:</label>
                    @Html.Password("matkhau", "", new { @class = "form-control", required = "required" })
                    <span class="text-danger">@ViewData["Loi3"]</span>
                </div>
                <div class="form-group">
                    <label for="rematkhau">Nhập Lại Mật Khẩu:</label>
                    @Html.Password("rematkhau", "", new { @class = "form-control", required = "required" })
                    <span class="text-danger">@ViewData["Loi4"]</span>
                </div>
                <div class="form-group">
                    <label for="dienthoai">Số Điện Thoại:</label>
                    @Html.TextBox("dienthoai", "", new { @class = "form-control" })
                    <span class="text-danger">@ViewData["Loi5"]</span>
                </div>
                <div class="form-group">
                    <label for="ngaysinh">Ngày Sinh:</label>
                    <input type="date" name="ngaysinh" class="form-control" required="required" />
                </div>
                <div class="form-group">
                    <label for="diachi">Địa Chỉ:</label>
                    @Html.TextBox("diachi", "", new { @class = "form-control" })
                    <span class="text-danger">@ViewData["Loi8"]</span>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    @Html.TextBox("email", "", new { @class = "form-control", type = "email", required = "required" })
                    <span class="text-danger">@ViewData["Loi7"]</span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Đăng Ký" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<h3 class="text-center text-danger">@ViewBag.TB</h3>
